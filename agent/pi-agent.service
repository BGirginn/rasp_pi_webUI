[Unit]
Description=Pi Control Panel Agent
Documentation=https://github.com/yourusername/pi-control
After=network.target docker.service
Requires=docker.service

[Service]
Type=simple
User=pi-agent
Group=pi-agent
WorkingDirectory=/opt/pi-control/agent

# Main process
ExecStart=/usr/bin/python3 /opt/pi-control/agent/pi-agent.py
ExecReload=/bin/kill -HUP $MAINPID

# Restart policy
Restart=on-failure
RestartSec=10s
StartLimitInterval=5min
StartLimitBurst=5

# Watchdog
WatchdogSec=60

# Environment
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=-/opt/pi-control/.env

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

# Read-write paths
ReadWritePaths=/run/pi-agent /data /var/log/pi-agent

# Socket directory
RuntimeDirectory=pi-agent
RuntimeDirectoryMode=0755

# Capabilities
CapabilityBoundingSet=CAP_NET_ADMIN CAP_SYS_PTRACE
AmbientCapabilities=CAP_NET_ADMIN CAP_SYS_PTRACE

# Resource limits
MemoryMax=256M
CPUQuota=50%

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=pi-agent

[Install]
WantedBy=multi-user.target
