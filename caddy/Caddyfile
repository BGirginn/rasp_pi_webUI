# Pi Control Panel - Caddy Configuration

# Main site - local development  
:80 {
    # Reverse proxy everything to Panel (API + Static files)
    reverse_proxy panel:8080
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        -Server
    }
    
    # Request logging
    log {
        output stdout
        format console
    }
}

# Health check endpoint (internal)
:8081 {
    respond /health 200
}
