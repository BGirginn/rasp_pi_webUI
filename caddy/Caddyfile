# Pi Control Panel - Caddy Configuration

# Main site - local development  
:80 {
    # Reverse proxy to Panel API
    handle /api/* {
        reverse_proxy panel:8080
    }
    
    # Server-Sent Events for live updates
    handle /api/*/stream {
        reverse_proxy panel:8080 {
            flush_interval -1
        }
    }
    
    # Static UI files
    handle {
        root * /srv/ui
        try_files {path} /index.html
        file_server
    }
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        -Server
    }
    
    # Request logging
    log {
        output stdout
        format console
    }
}

# Health check endpoint (internal)
:8081 {
    respond /health 200
}

