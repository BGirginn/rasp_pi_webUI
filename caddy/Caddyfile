# Pi Control Panel - Caddy Configuration (Native)

# Main site
:80 {
    # Compress responses to reduce transfer size.
    encode zstd gzip

    # WebSocket for terminal (must be before other /api/* handlers)
    handle /api/terminal/ws {
        reverse_proxy 127.0.0.1:8080
    }
    
    # Server-Sent Events for live updates (including SSE endpoints)
    handle /api/sse/* {
        reverse_proxy 127.0.0.1:8080 {
            flush_interval -1
        }
    }
    
    handle /api/*/stream {
        reverse_proxy 127.0.0.1:8080 {
            flush_interval -1
        }
    }
    
    # Reverse proxy to Panel API (native systemd service)
    handle /api/* {
        reverse_proxy 127.0.0.1:8080
    }
    
    # Static hashed assets
    handle /assets/* {
        root * /opt/pi-control/panel/ui/dist

        # Cache hashed build assets aggressively.
        header Cache-Control "public, max-age=31536000, immutable"
        file_server
    }

    # Static UI files (built React app)
    handle {
        root * /opt/pi-control/panel/ui/dist

        # Always revalidate HTML and SPA routes.
        header Cache-Control "no-cache, no-store, must-revalidate"

        # SPA fallback for client-side routes.
        try_files {path} /index.html

        file_server
    }
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        -Server
    }
    
    # Request logging
    log {
        output stdout
        format console
    }
}

# Health check endpoint (internal)
:8081 {
    respond /health 200
}
